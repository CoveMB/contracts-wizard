{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "strict": true
  },
  "watch": {
    "exclude": [
      "node_modules",
      "dist"
    ]
  },
  "imports": {
    "@upstash/redis": "https://esm.sh/@upstash/redis@1.25.2",
    "ai": "https://esm.sh/ai@2.2.16",
    "openai": "https://esm.sh/openai@4.11.1",
    "@openzeppelin/wizard": "../core/solidity/dist/",
    "@openzeppelin/wizard/src/common-options": "../core/solidity/dist/common-options"
  },
  "tasks": {
    "dev": "deno run --allow-all --env-file --watch --no-clear-screen --unstable-sloppy-imports scripts/development-server.ts",
    "type:check": "deno check ./api --unstable-sloppy-imports"
  }
}